[Unit]
Description="ZnapZend - ZFS backup tool"
After=network.target

[Service]
Type=forking
User=znapzend
ExecStart=<%= @basedir %>/<%= @service_name %> <%= @service_start_options %> --pidfile=<%= @service_pid_file %> --logto=<%= @service_log_file %>
Restart=on-failure
ExecReload=/bin/pkill -HUP -F <%= @service_pid_file %>


[Install]
WantedBy=multi-user.target
